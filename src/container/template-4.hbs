<header class="header">
    <div class="">  
      {{>logo}}
    </div>
      <nav class="header_nav">
        <div class="header_nav_right"> 
        {{>nav list=header}}
        </div> 
      </nav>
</header>

{{#with main}}
  <div class="main">
      <img src="{{image}}" alt="Main image" class="main_image">
      <div class="main_content">
        <h1 class="main_title">{{heading}}</h1>
        <p class="main_text">{{description}}</p>
        <div>
          <a class="main_button" href="{{href}}">{{button}}</a>
        </div>
    </div>
  </div>
{{/with}}


<div class="featured">
  {{#each featured}}
     {{> cardFeatured data=this}}
   {{/each}}
</div>

<div class="form">
  {{#each actions}}
  <div class="form_content">
    <p class="form_title">{{heading}}</p>
    <div class="form_action">
      <a class="button form_button" href="{{url}}">{{text}}</a>
    </div>
  </div>
  {{/each}}  
</div>
    
<footer class="footer">
  <div class="">
    {{>logo}}
    <span class="footer_copyright">Copyright 2023-2024</span>
  </div>

  {{#each footer}}
    <div class="">
        <span class="footer_title">{{title}}</span>
        {{>nav list=links isVertical=true}}
    </div> 
  {{/each}}
</footer>
